<h1> Building Index Page </h1>

<% @buildings.each do |building| %>
    <label> Building Name: </label><br>
    <%= link_to building.name, building_path(building)%><br><br>
    <label> Floors Available: </label><br>
    <%= building.number_of_floors_available %><br><br>
<% end %>

